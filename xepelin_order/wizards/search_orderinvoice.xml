<?xml version="1.0" ?>
<odoo>

    <record id="search_orderinvoice_wizard" model="ir.ui.view">
        <field name="name">Search Order-Invoice</field>
        <field name="model">search.orderinvoice.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="partner_ids" required="1" widget="many2many_tags"/>
                </group>
                <footer>
                    <button name="action_search" string="Search Order-Invoices" type="object" class="oe_highlight" />
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

</odoo>
